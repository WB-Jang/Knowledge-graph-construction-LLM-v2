{
  "name": "Legal Knowledge Graph v2",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "legal-kg",
  "workspaceFolder": "/app",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python. vscode-pylance",
        "ms-python. black-formatter",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  
  "forwardPorts": [8888, 8501],
  
  "postCreateCommand": "echo 'export $(grep -v \"^#\" /app/.env | xargs)' >> ~/.bashrc && echo 'Container ready! .env file will be loaded in new shells.'",
  
  "remoteUser": "appuser",

  "remoteEnv": {
		// 환경 변수 설정 (.env 파일에서 자동 로드됨)
		// ⚠️ GOOGLE_API_KEY는 .env 파일에서 설정하세요! 여기에 하드코딩하지 마세요.
		"GEMINI_MODEL": "gemini-2.5-flash-preview-09-2025",
		"USE_LOCAL_LLM": "false"
	},
}