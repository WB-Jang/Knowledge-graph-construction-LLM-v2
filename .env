# ============================================
# Google Gemini API 설정
# ============================================
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL="gemini-2.5-flash-preview-09-2025"

# ============================================
# LLM 설정
# ============================================
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2048

# ============================================
# 로컬 LLM 사용 (선택사항)
# ============================================
USE_LOCAL_LLM=false
LLAMA_CPP_API_URL="http://host.docker.internal:8000"
LLAMA_CPP_API_KEY=

# ============================================
# LangChain 추적 (선택사항)
# ============================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=

# ============================================
# Memgraph 설정
# ============================================
MEMGRAPH_HOST=memgraph
MEMGRAPH_PORT=7687
MEMGRAPH_USERNAME=
MEMGRAPH_PASSWORD=
MEMGRAPH_LOG_LEVEL=WARNING

# ============================================
# GPU 설정
# ============================================
CUDA_VISIBLE_DEVICES=0
